<Window x:Class="Little_Fighter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Little_Fighter"
        mc:Ignorable="d"
        Title="MainWindow" Height="748" Width="1230" ResizeMode="CanMinimize">
    <Grid Margin="0,0,2,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Background -->
        <Image x:Name="bckgrnd" Grid.RowSpan="3" Grid.ColumnSpan="2" Margin="0,0,-2,-20" Source="img/enviroment.png" Stretch="UniformToFill"></Image>

        <!-- Stats -->
        <Label x:Name="playerHp" Content="100 HP" FontWeight="Bold" Margin="30,0" Foreground="White" FontSize="15"></Label>
        <StackPanel x:Name="statsPlayer" Background="Red" Width="500" Margin="30" HorizontalAlignment="Left"></StackPanel>
        
        <Label x:Name="enemyHp" Content="100 HP" Grid.Column="1" FontWeight="Bold" HorizontalAlignment="Right" Margin="30,0" Foreground="White" FontSize="15"></Label>
        <StackPanel x:Name="statsEnemy" Grid.Column="1" Background="Red" Width="500" Margin="30" HorizontalAlignment="Right"></StackPanel>

        <!-- Heroes -->
        <Image x:Name="player" Width="200" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="150,0,0,0" Grid.ColumnSpan="2" Grid.Row="1" gif:ImageBehavior.AnimationCompleted="animEnd" gif:ImageBehavior.RepeatBehavior="Forever" gif:ImageBehavior.AnimatedSource="img/anim/waiting.gif"/>
        <Image x:Name="enemy" Width="200" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,150,0" Grid.ColumnSpan="2" Grid.Row="1" gif:ImageBehavior.AnimationCompleted="animEnd" gif:ImageBehavior.RepeatBehavior="Forever" gif:ImageBehavior.AnimatedSource="img/anim/waiting.gif"/>


        <!-- Action Buttons -->
        <Button Grid.Row="2" Width="200" HorizontalAlignment="Left" Margin="15,15,0,15" Content="Fast Attack" FontSize="15" FontWeight="Bold" Click="fastAttack_click"></Button>
        <Button Grid.Row="2" Grid.ColumnSpan="2" Margin="0,15" Width="200" Content="Jump Attack" FontSize="15" FontWeight="Bold"/>
        <Button Grid.Row="2" Grid.Column="1" Width="200" HorizontalAlignment="Right" Margin="0,15,15,15" Content="Defende" FontSize="15" FontWeight="Bold" Click="def_click"></Button>

    </Grid>
</Window>
